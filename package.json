{
  "name": "deep-ai-chat",
  "version": "1.0.0",
  "description": "A floating chat interface desktop application using n8n",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "clean": "rimraf dist node_modules/.cache",
    "build": "electron-builder --win",
    "build:win": "electron-builder --win",
    "build:portable": "electron-builder --win portable"
  },
  "keywords": [
    "electron",
    "chat",
    "ai",
    "n8n"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.chat.floatingapp",
    "productName": "Deep AI Chat",
    "directories": {
      "output": "dist"
    },
    "files": [
      "*.js",
      "*.html",
      "*.css",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules",
        "to": "app/node_modules",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    }
  },
  "dependencies": {
    "@civic/auth": "^0.8.0",
    "@elevenlabs/elevenlabs-js": "^2.3.0",
    "@emnapi/core": "^0.45.0",
    "@emnapi/runtime": "^0.45.0",
    "@google-cloud/speech": "^7.1.0",
    "@google/generative-ai": "^0.2.1",
    "@tybys/wasm-util": "^0.8.3",
    "@types/plist": "^3.0.5",
    "@types/verror": "^1.10.11",
    "assert-plus": "^1.0.0",
    "astral-regex": "^2.0.0",
    "axios": "^1.10.0",
    "cli-truncate": "^2.1.0",
    "crc": "^3.8.0",
    "electron-store": "^10.1.0",
    "elevenlabs": "^1.59.0",
    "extsprintf": "^1.4.1",
    "form-data": "^4.0.3",
    "fs-monkey": "^1.0.6",
    "googleapis": "^148.0.0",
    "iconv-corefoundation": "^1.1.7",
    "memfs": "^3.5.3",
    "memfs-browser": "^3.5.10302",
    "node-addon-api": "^1.7.2",
    "node-fetch": "^2.7.0",
    "slice-ansi": "^3.0.0",
    "sqlite3": "^5.1.7",
    "tslib": "^2.8.1",
    "verror": "^1.10.1"
  }
}
